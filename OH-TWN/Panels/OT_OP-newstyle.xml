<?xml version="1.0"?>

<!--
OT_OP-newstyle.xml

Based on the work of Torsten Dreyer torsten@t3r.de

Oil temperature / pressure gauge for SenecaII. This is a "new" style small gauge that
exist in round-gauge paneled SenecaV aircraft where all engine gauges are in 
a cluster in two columns on the right side of the "six pack".

Tuomas Kuosmanen tuomas.kuosmanen@gmail.com

-->

<PropertyList>

    <name>OT/OP Indicator</name>
    <w-base>256</w-base>
    <h-base>256</h-base>

    <params>
      <ot>engines/engine[0]/oil-temperature-degf</ot>
      <op>/engines/engine[0]/oil-pressure-psi</op>
    </params>
    
    <layers>

        <layer>
            <name>Face</name>
            <w>256</w>
            <h>256</h>
            <texture>
                <path>/Aircraft/OH-TWN/Panels/face-ot_op-senecaV.png</path>
                <x1>0.0</x1>
                <x2>1.0</x2>
                <y1>0.0</y1>
                <y2>1.0</y2>
            </texture>
        </layer>

        <layer>
            <name>OT Needle</name>
            <w>32</w>
            <h>50</h>

            <texture>
                <path>/Aircraft/OH-TWN/Panels/pointer.png</path>
                <x1>0.0</x1>
                <x2>1.0</x2>
                <y1>0.0</y1>
                <y2>1.0</y2>
            </texture>

            <transformations>

                <transformation>
                    <type>rotation</type>
                    <property alias="../../../../../params/ot"/>
                    <interpolation>
                        <entry>
                            <ind>0</ind>
                            <dep>-146</dep>
                        </entry>
                        <entry>
                            <ind>100</ind>
                            <dep>-123.5</dep>
                        </entry>
                        <entry>
                            <ind>260</ind>
                            <dep>-34</dep>
                        </entry>
                    </interpolation>
                </transformation>

                <transformation>
                    <type>y-shift</type>
                    <offset>50</offset>
                </transformation>

            </transformations>

        </layer>

        <layer>
            <name>OP Needle</name>
            <w>32</w>
            <h>50</h>

            <texture>
                <path>/Aircraft/OH-TWN/Panels/pointer.png</path>
                <x1>0.0</x1>
                <x2>1.0</x2>
                <y1>0.0</y1>
                <y2>1.0</y2>
            </texture>

            <transformations>

                <transformation>
                    <type>rotation</type>
                    <property alias="../../../../../params/op"/>
                    <interpolation>
                        <entry>
                            <ind>0</ind>
                            <dep>146</dep>
                        </entry>
                        <entry>
                            <ind>120</ind>
                            <dep>34</dep>
                        </entry>
                    </interpolation>
                </transformation>

                <transformation>
                    <type>y-shift</type>
                    <offset>50</offset>
                </transformation>

            </transformations>

        </layer>

    </layers>

</PropertyList>
